{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "composer",
      "args": ["install"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run PHP CodeSniffer",
      "type": "shell",
      "command": "./vendor/bin/phpcs",
      "args": ["--standard=WordPress", "."],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Fix PHP Code Style",
      "type": "shell",
      "command": "./vendor/bin/phpcbf",
      "args": ["--standard=WordPress", "."],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run PHPUnit Tests",
      "type": "shell",
      "command": "./vendor/bin/phpunit",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run PHPStan Analysis",
      "type": "shell",
      "command": "./vendor/bin/phpstan",
      "args": ["analyse", "--level=5", "."],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "WordPress: Check Plugin",
      "type": "shell",
      "command": "wp",
      "args": ["plugin", "list"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "WordPress: Activate Plugin",
      "type": "shell",
      "command": "wp",
      "args": ["plugin", "activate", "${workspaceFolderBasename}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Assets",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "dependsOn": "Install Dependencies"
    }
  ]
}